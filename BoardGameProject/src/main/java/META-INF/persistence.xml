<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="BoardGameProject">
		<class>com.team4.model.classes.Player</class>
		<class>com.team4.model.classes.Rule</class>
		<class>com.team4.model.abstrct.Game</class>
		<class>com.team4.model.abstrct.Piece</class>
		<class>com.team4.model.classes.chess.pieces.Pawn</class>
		<class>com.team4.model.classes.chess.pieces.Queen</class>
		<class>com.team4.model.classes.chess.pieces.King</class>
		<class>com.team4.model.classes.chess.pieces.Rook</class>
		<class>com.team4.model.classes.chess.pieces.Bishop</class>
		<class>com.team4.model.classes.uno.Uno</class>
		<class>com.team4.model.classes.chess.Chess</class>
		<class>com.team4.model.classes.User</class>
		<class>com.team4.model.classes.chess.Board</class>
		<class>com.team4.model.classes.chess.Space</class>
		<class>com.team4.model.classes.uno.Hand</class>
		<class>com.team4.model.classes.uno.Deck</class>
		<class>com.team4.model.classes.uno.Card</class>
		<class>com.team4.model.classes.chess.pieces.Knight</class>	
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/GameSiteDB"/>
			<property name="javax.persistence.jdbc.user" value="postgres"/>
			<property name="javax.persistence.jdbc.password" value="root"/>
			<property name="hibernate.ejb.cfgfile" value="hibernate.cfg.xml"/>
			<property name="hibernate.hbm2ddl.auto" value="create"></property>
		</properties>
	</persistence-unit>
</persistence>
